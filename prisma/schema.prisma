datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employees {
  id        Int         @id @default(autoincrement())
  name      String
  document  String      @unique
  hiredAt   DateTime
  Documents Documents[]
}

model DocumentTypes {
  id        Int         @id @default(autoincrement())
  name      String
  Documents Documents[]
}

model Documents {
  id             Int           @id @default(autoincrement())
  name           String?
  status         Status        @default(P)
  employee       Employees     @relation(fields: [employeeId], references: [id])
  documentType   DocumentTypes @relation(fields: [documentTypeId], references: [id])
  documentTypeId Int
  employeeId     Int

  @@unique([documentTypeId, employeeId])
}

enum Status {
  P
  E
}
